<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ServerImage</title>
    <%- include("partials/head.ejs") %>
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>

    <div class="pl-16 lg:pl-64 h-screen w-full">
      <div class="flex flex-wrap m-0 px-0 justify-between">
        <div class="col-md-4 offset-md-4 mt-5">
          <table class="border-collapse table-fixed w-full text-md">
            <thead>
              <tr>
                <th
                  class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-detailColor bg-primaryColor text-left"
                >
                  title
                </th>
                <th
                  class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-detailColor bg-primaryColor text-left"
                >
                  description
                </th>
                <th
                  class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-detailColor bg-primaryColor text-left"
                >
                  filename
                </th>
                <th
                  class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-detailColor bg-primaryColor text-left"
                >
                  path
                </th>
                <th
                  class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-detailColor bg-primaryColor text-left"
                >
                  Rezise
                </th>
              </tr>
            </thead>
            <tbody class="bg-white bg-secondaryColor">
              <% images.forEach(function(image){ %>

              <tr>
                <td
                  class="border-b border-primaryColor p-4 pl-8 text-detailColor truncate"
                >
                  <%= image.title %>
                </td>

                <td
                  class="border-b border-primaryColor p-4 pl-8 text-detailColor"
                >
                  <%= image.description %>
                </td>

                <td
                  class="border-b border-primaryColor p-4 pl-8 text-detailColor truncate"
                >
                  <%= image.filename %>
                </td>

                <td
                  class="border-b border-primaryColor p-4 pl-8 text-detailColor truncate"
                >
                  <%= image.path %>
                </td>
                <td
                  class="border-b border-primaryColor p-2 pl-4 text-detailColor"
                >
                  <a
                    href="/image/<%= image._id%>/rezise"
                    class="w-full text-center font-bold"
                    >Rezise</a
                  >
                </td>
              </tr>

              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <%- include("partials/footerCss.ejs") %>
    </div>
  </body>
</html>
