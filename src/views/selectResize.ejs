<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ServerImage</title>
    <%- include("partials/head.ejs") %>
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>

    <div class="pl-16 lg:pl-64 h-screen w-full">
      <div class="flex flex-wrap m-0 px-4 justify-between">
        <div class="col-md-4 offset-md-4"></div>
        <div class="col-md-4 offset-md-4">
          <table class="border-collapse table-fixed w-full text-sm">
            <thead>
              <tr>
                <th
                  class="border-b dark:border-slate-600 font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left"
                >
                  title
                </th>
                <th
                  class="border-b dark:border-slate-600 font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left"
                >
                  description
                </th>
                <th
                  class="border-b dark:border-slate-600 font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left"
                >
                  filename
                </th>
                <th
                  class="border-b dark:border-slate-600 font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left"
                >
                  path
                </th>
                <th
                  class="border-b dark:border-slate-600 font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left"
                >
                  created_at
                </th>
                <th
                  class="border-b dark:border-slate-600 font-medium p-4 pl-8 pt-0 pb-3 text-slate-400 dark:text-slate-200 text-left"
                >
                  Rezise
                </th>
              </tr>
            </thead>
            <tbody class="bg-white dark:bg-slate-800">
              <% images.forEach(function(image){ %>

              <tr>
                <td
                  class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 text-slate-500 dark:text-slate-400"
                >
                  <%= image.title %>
                </td>

                <td
                  class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 text-slate-500 dark:text-slate-400"
                >
                  <%= image.description %>
                </td>

                <td
                  class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 text-slate-500 dark:text-slate-400"
                >
                  <%= image.filename %>
                </td>

                <td
                  class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 text-slate-500 dark:text-slate-400"
                >
                  <%= image.path %>
                </td>

                <td
                  class="border-b border-slate-100 dark:border-slate-700 p-4 pl-8 text-slate-500 dark:text-slate-400"
                >
                  <%= format(image.created_at) %>
                </td>
                <td
                  class="border-b border-slate-100 dark:border-slate-700 p-2 pl-4 text-slate-500 dark:text-slate-400"
                >
                  <a href="/image/<%= image._id%>/rezise" class="">Rezise</a>
                </td>
              </tr>

              <% }); %>
            </tbody>
          </table>
        </div>
      </div>
      <%- include("partials/footerCss.ejs") %>
    </div>
  </body>
</html>
