<%- include("partials/head.ejs") %>

  <body>
    <%- include("partials/navbar.ejs") %>

      <main class="pl-64 h-screen w-full ">
        <div class="w-full h-full flex flex-col items-center justify-center gap-y-3">
          <div class="w-[calc(33.33% - 30px)] mb-2 p-2 bg-white shadow-lg rounded-lg overflow-hidden">
            <img class="my-3 rounded-xl w-full h-48 object-cover" id="imgPreview" />
          </div>
          <div class="box-border w-3/4 h-auto border-2 border-solid border-slate-500">
            <form action="/upload" method="post" enctype="multipart/form-data">
              <div class="grid gap-6 mb-6 md:grid-cols-2">
                <div>
                  <label for="User_name" class="block mb-2 text-sm font-medium text-gray-900">
                    User name</label>
                  <input type="text" name="title" placeholder="Title" id="User_name"
                    class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg block w-full p-2.5" />
                </div>
                <div>
                  <label for="description"
                    class="block mb-2 text-sm font-medium text-gray-900 ">Description</label>
                  <textarea id="description" name="description" rows="4"
                    class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300"
                    placeholder="Description"></textarea>
                </div>
                <div>
                  <label class="block mb-2 text-sm font-medium text-gray-900" for="img">Upload file</label>
                  <input type="file" name="image" accept="image/*" id="img"
                    class="block w-full text-sm text-gray-900 rounded-lg cursor-pointer bg-gray-50  
                    file:mr-4 file:py-2 file:px-4
                    file:rounded-full file:border-0
                    file:text-sm file:font-semibold
                    file:bg-secondaryColor file:text-detailColor
                    hover:file:bg-primaryColor" />
                </div>
                <div>
                  <button type="submit" class="w-full bg-primaryColor rounded-3xl text-sm px-5 py-2.5 me-2 mb-2 text-detailColor">
                    Upload
                  </button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </main>

      <%- include("partials/footerCss.ejs") %>

        <script src="/js/formUpload.js"></script>
  </body>

  </html>