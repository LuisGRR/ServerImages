<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ServerImage</title>
    <%- include("partials/head.ejs") %>
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>

    <div
      class="pl-16 lg:pl-64 h-screen w-full flex flex-col justify-center items-center"
    >
      <div class="flex flex-row justify-center p-2 mb-2">
        <img
          src="<%= image.path%>"
          alt="images.title"
          class="w-[calc(33.33% - 30px)] h-60 bg-white shadow-lg rounded-lg overflow-hidden"
        />
      </div>

      <div
        class="box-border w-4/5 h-auto border-2 border-solid border-slate-500 p-14"
      >
        <form action="#" method="POST">
          <div class="flex flex-col gap-y-10">
            <div class="">
              <input
                type="text"
                name="width"
                placeholder="width"
                class="form-control"
              />
            </div>
            <div class="">
              <input
                type="text"
                name="height"
                placeholder="height"
                class="form-control"
              />
            </div>
            <input
              id="imgPhat"
              name="imgPhat"
              type="hidden"
              value="<%= image.path%>"
            />
            <input
              id="userId"
              type="hidden"
              name="userId"
              value="<%= image._id%>"
            />

            <div class="">
              <button
                type="submit"
                class="w-full h-10 bg-red-100 border border-solid border-orange-900 rounded-md"
              >
                Rezise
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <%- include("partials/footerCss.ejs") %>
    <script src="/js/formRezise.js"></script>
  </body>
</html>
