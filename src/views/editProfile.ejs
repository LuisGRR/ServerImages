<%- include("partials/head.ejs") %>

  <body>
    <%- include("partials/navbar.ejs") %>

      <div class="min-h-screen w-full grid grid-cols-6">
        
        <div class="col-span-6 md:col-span-3 order-2 md:order-1  flex justify-center items-center">
          <form action="#" method="PUT" class="w-4/5 rounded-lg shadow-xl p-5">
            <div class="flex flex-col gap-2 mb-6">
              <div class="">
                <div class="label">
                  <span class="label-text">
                    Title </span>
                </div>
                <input class="input input-bordered w-full" value="<%= image.title  %>" type="text" name="title" />
              </div>
              <div>
                <div class="label">
                  <span class="label-text">
                    Description </span>
                </div>
                <textarea name="description" rows="2"
                  class="textarea textarea-bordered w-full"><%= image.description%></textarea>
              </div>
              <input type="hidden" name="userId" value="<%= image._id%>" />
              <div>
                <button type="submit"
                class="btn btn-outline btn-block">
                  Upload
                </button>
              </div>
            </div>
          </form>
        </div>

        <div class="col-span-6 md:col-span-3  order-1 md:order-2  flex justify-center w-[calc(33.33% - 30px)] h-screen">
          <img src="/api/image/<%= image.filename %>" alt="images.title"
            class="" />
        </div>

      </div>
      <script src="/js/form.js"></script>
  </body>

  </html>