 <%- include("partials/head.ejs") %>

  <body>
    <%- include("partials/navbar.ejs") %>

    <div
      class="pl-16 lg:pl-64 h-screen w-full flex flex-col justify-center items-center"
    >
      <div class="flex flex-row justify-center p-2 mb-2">
        <img
          src="<%= image.path%>"
          alt="images.title"
          class="w-[calc(33.33% - 30px)] h-60 bg-white shadow-lg rounded-lg overflow-hidden"
        />
      </div>
      <div
        class="w-3/4 px-10 py-5 mx-auto rounded-lg shadow-xl"
      >
        <form action="#" method="PUT">
          <div class="flex flex-col gap-2 mb-6 md:grid-cols-2">
            <div class="">
              <label for="User_name" class="block text-sm font-medium leading-6 text-don-juan-900">
                Title</label>
              <input
                value="<%= image.title  %>"
                type="text"
                name="title"
                placeholder="Title"
                class=" block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-primaryColor placeholder:text-primaryColor focus:ring-2 focus:ring-inset focus:ring-secondaryColor sm:text-sm sm:leading-6"
              />
            </div>
            <div>
              <label for="description"
              class="block mb-2 text-sm font-medium text-gray-900 ">Description</label>
              <textarea
                name="description"
                rows="4"
                class="block p-2.5 w-full text-sm text-gray-900 bg-gray-50 rounded-lg border border-gray-300"
                placeholder="Description"
              >
<%= image.description  %></textarea
              >
            </div>
            <input type="hidden" name="userId" value="<%= image._id%>" />
            <div>
              <button
                type="submit"
                class="w-full justify-center rounded-md bg-don-juan-900 px-3 py-1.5 text-sm font-semibold leading-6 text-detailColor shadow-sm hover:bg-don-juan-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-don-juan-600"
              >
                Upload
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
    <%- include("partials/footerCss.ejs") %>
    <script src="/js/form.js"></script>
  </body>
</html>
