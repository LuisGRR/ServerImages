<%- include("partials/head.ejs") %>

  <body>
    <%- include("partials/navbar.ejs") %>

      <div class="pl-16 lg:pl-64 h-screen w-full">
        <div class="flex flex-col gap-y-2 py-5">
          <div class="flex flex-row justify-center">
            <img src="<%= image.path%>" alt="images.title"
              class="w-[calc(33.33% - 30px)] h-96 bg-white shadow-lg rounded-lg overflow-hidden" />
          </div>

          <div class="flex flex-col justify-evenly px-20">
            <h2 class="not-italic font-normal leading-10">
              Url: <a href="<%= image.path %>">
                <%= image.path %>
              </a>
            </h2>
            <p class="not-italic font-normal leading-10">
              Title: <%= image.title %>
            </p>
            <p class="not-italic font-normal leading-10">
              Description: <%= image.description %>
            </p>
            <div class="flex flex-row justify-around">
              <p class="not-italic font-normal leading-10">
                Create at: <%= format(new Date(image.created_at)) %>
              </p>
              <p class="not-italic font-normal leading-10">
                Update at: <%= format(new Date(image.update_at)) %>
              </p>
            </div>
            <div class="flex flex-row justify-around">
              <p class="not-italic font-normal leading-10">
                Dimencions: H -> <%= image.height %> W -> <%= image.width %>
              </p>
              <p class="not-italic font-normal leading-10">
                Size: <%= image.size %>
              </p>
            </div>
          </div>

          <div class="flex flex-col gap-y-2 md:gap-y-5 md:flex-row justify-evenly p-4">
            <a href="/image/<%= image._id%>/edit"
              class="text-base text-center font-medium rounded-lg p-3 border border-solid border-don-juan-900 hover:bg-don-juan-700 hover:text-don-juan-100">Modify</a>
            <a href="/image/<%= image._id%>/rezise"
              class="text-base text-center font-medium rounded-lg p-3 border border-solid border-don-juan-900 hover:bg-don-juan-700 hover:text-don-juan-100">Rezise</a>
            <button id="btnDelete" value="<%= image._id%>"
              class="text-base font-medium rounded-lg p-3 border border-solid border-don-juan-900 hover:bg-don-juan-700 hover:text-don-juan-100">
              Delete Image
            </button>
          </div>
        </div>

        <%- //include("partials/footerCss.ejs") %>
      </div>
      <%- include("partials/footerimposrtsJS.ejs") %>
  </body>

  </html>