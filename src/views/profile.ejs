<!DOCTYPE html>
<html lang="en" data-theme="light">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>ServerImage | Profile</title>
  <%- include("partials/headScripts.ejs") %>
</head>

<body>
  <%- include("partials/navbar.ejs") %>

    <div class=" h-full w-full">
      <div class="grid grid-cols-1 gap-3 md:gap-0 md:grid-cols-6 py-3 px-2">
        <div class="col-span-1 order-2 md:order-1 md:col-span-2 flex flex-col gap-3 border-r-2">
          <div class="px-4">
            <h2 class="not-italic font-normal leading-10 truncate " >
              Url: <a class="link" target="_blank" href="<%= image.path %>">
                <%= image.filename %>
              </a>
            </h2>
            <p class="not-italic font-normal leading-10">
              Title: <%= image.title %>
            </p>
            <p class="not-italic font-normal leading-10">
              Description: <%= image.description %>
            </p>
            <div class="flex flex-col justify-around">
              <p class="not-italic font-normal leading-10">
                Tags:
              </p>
              <ul class="flex flex-row gap-3 ">
                <% image.tags.forEach(tag=> { %>
                  <li class="border p-1 mx- text-center text-xs">
                    <%= tag %>
                  </li>
                  <% }); %>
              </ul>
            </div>
            <div class="flex flex-col justify-around">
              <p class="not-italic font-normal leading-10">
                Create at: <%= format(new Date(image.created_at)) %>
              </p>
              <p class="not-italic font-normal leading-10">
                Update at: <%= format(new Date(image.update_at)) %>
              </p>
            </div>
            <div class="flex flex-col justify-around">
             
              <p class="not-italic font-normal leading-10">
                Size: <%= image.size %> (<%= image.width %> x <%= image.height %>)
              </p>

               <p class="not-italic font-normal leading-10">
                 Mime type: <%= image.mimetype %>
              </p>
            </div>
          </div>
          <div class="divider"></div> 

          <div class="flex flex-col gap-y-2 justify-evenly px-4">
            <a href="/image/<%= image._id%>/edit"
              class="btn btn-outline ">Modify</a>
            <a href="/image/<%= image._id%>/convert"
              class="btn btn-outline ">Convert</a>
            <a href="/image/<%= image._id%>/rezise"
              class="btn btn-outline ">Rezise</a>
            <button id="btnDelete" value="<%= image._id%>"
              class="btn btn-outline ">
              Delete Image
            </button>
          </div>
        </div>
        <div class="col-span-1 order-1 md:order-2 md:col-span-4 flex justify-center w-[calc(33.33% - 30px)] h-screen">
          <img src="<%= image.path%>" alt="images.title" class=" " />
        </div>


      </div>

      <%- //include("partials/footerCss.ejs") %>
    </div>
    <script src="/js/profile.js"></script>
</body>

</html>