<form action="#" method="POST">
    <div class="flex flex-col gap-3 mb-6 md:grid-cols-2">
        <div>
            <label for="selectType" class="block text-sm font-medium leading-6 text-don-juan-900">Type</label>
            <select name="selectType" id="selectType"
                class=" border-0 text-sm rounded-md shadow-sm ring-1 focus:ring-don-juan-500 focus:border-don-juan-900 block w-full py-1.5">
                
                <% if (mimetype !== 'image/jpeg') { %>
                    <option value="jpeg">jpeg</option>
                <% } %>
                <% if (mimetype !== 'image/png') { %>
                    <option value="png">png</option>
                <% } %>
                <% if (mimetype !== 'image/webp') { %>
                    <option value="webp">webp</option>
                <% } %>
            </select>
        </div>
        <input id="imgPhat" name="imgPhat" type="hidden" value="<%= image.path%>" />
        <input id="userId" type="hidden" name="userId" value="<%= image._id%>" />
        <div>
            <button type="submit"
                class="w-full rounded-md bg-don-juan-900 px-3 py-1.5 text-sm font-semibold leading-6 text-detailColor shadow-sm hover:bg-don-juan-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-don-juan-600">
                Convert
            </button>
        </div>
    </div>
</form>