<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ServerImage</title>
    <%- include("partials/head.ejs") %>
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>
    <div class="pl-16 lg:pl-64 h-screen w-full">
      <div class="flex flex-wrap m-0 px-4 justify-between">
        <% images.forEach(function(image){ %>
        <div
          class="w-[calc(33.33% - 30px)] mb-4 p-4 bg-white shadow-lg rounded-lg overflow-hidden"
        >
          <a href="/image/<%= image._id %>" class="">
            <img
              src="<%= image.path %>"
              alt="image.title"
              class="my-3 rounded-xl w-full h-48 object-cover"
            />
            <div class="text-center font-medium text-lg py-4">
              <h5 class=""><%= image.title %></h5>
              <p class=""><%= image.description %></p>
              <p class=""><%= format(image.created_at) %></p>
            </div>
          </a>
        </div>

        <% }); %>
      </div>

      <%- include("partials/footerCss.ejs") %>
    </div>
  </body>
</html>
