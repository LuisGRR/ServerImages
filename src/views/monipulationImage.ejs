<%- include("partials/head.ejs") %>

    <body>
        <%- include("partials/navbar.ejs") %>

            <div class="pl-16 lg:pl-64 h-screen w-full flex flex-row justify-evenly items-center">
                <div class="flex flex-col justify-center p-5 mb-2 w-5/12">
                    <div class="flex justify-center">
                        <img src="<%= image.path%>" alt="images.title"
                            class=" h-60 bg-white shadow-lg rounded-lg overflow-hidden" />
                    </div>
                    <% if(type==="rezise" ) {%>
                        <div class="mt-5 whitespace-nowrap flex justify-around">
                            <p>Width: <span>
                                    <%= image.width %>
                                </span> </p>
                            <p>Height: <span>
                                    <%= image.height %>
                            </p>
                        </div>
                    <% } %>
                </div>
                <div class=" px-10 py-5 rounded-lg shadow-xl">
                    <% if (type==="convert" ) {%>
                        <%- include("partials/formConvert.ejs") %>
                    <% } else if(type==="rezise" ) {%>
                        <%- include("partials/formRezise.ejs") %>
                    <% } %>
                </div>
            </div>
            <% if (type==="convert" ) {%>
                <script src="/js/formConvert.js"></script>
            <% } else if(type==="rezise" ) {%>
                <script src="/js/formRezise.js"></script>
            <% } %>
            
    </body>

    </html>